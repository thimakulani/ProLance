<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProLance.Views.SigninPage">
    <ContentPage.Content>
       
        <StackLayout>
           



            <Frame Margin="10" CornerRadius="5" VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <Image Source="user" WidthRequest="75" HeightRequest="75"/>
                    <Entry Placeholder="Email" Margin="10" Text="{Binding Email}"/>
                    <Entry Placeholder="Password"  Margin="10" Text="{Binding Password}"/>
                    <Label Text="Forgot Password?" Margin="10" TextColor="Blue"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Text="Login"  Margin="10" CornerRadius="5"  Command="{Binding OnSubmitCommand}" />
                        <Button Text="Signup"  Margin="10" CornerRadius="5" 
                                Grid.Column="1" Clicked="BtnSignup_Clicked" 
                                BackgroundColor="#b83542"/>
                    </Grid>
                </StackLayout>
            </Frame>




        </StackLayout>
        
        
        
    </ContentPage.Content>
</ContentPage>